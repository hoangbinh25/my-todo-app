<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            /* font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', Arial, sans-serif; */
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .add-form {
            padding: 30px;
            background: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
        }

        .form-group {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .form-input {
            flex: 1;
            min-width: 200px;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-primary {
            background: #4CAF50;
            color: white;
        }

        .btn-primary:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .btn-edit {
            background: #2196F3;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
        }

        .btn-edit:hover {
            background: #1976D2;
        }

        .btn-delete {
            background: #f44336;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
        }

        .btn-delete:hover {
            background: #d32f2f;
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
        }

        .btn-cancel:hover {
            background: #5a6268;
        }

        .todo-list {
            padding: 30px;
        }

        .todo-item {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .todo-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .todo-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 15px;
        }

        .todo-info {
            flex: 1;
        }

        .todo-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .todo-description {
            color: #666;
            line-height: 1.5;
            margin-bottom: 10px;
        }

        .todo-meta {
            font-size: 0.9rem;
            color: #888;
        }

        .todo-actions {
            display: flex;
            gap: 10px;
            flex-shrink: 0;
        }

        .edit-form {
            background: #f8f9fa;
            border: 2px solid #4CAF50;
            border-radius: 10px;
            padding: 20px;
            margin-top: 15px;
        }

        .edit-form .form-group {
            margin-bottom: 15px;
        }

        .edit-form .form-input {
            width: 100%;
            margin-bottom: 10px;
        }

        .edit-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .empty-state {
            text-align: center;
            padding: 60px 30px;
            color: #666;
        }

        .empty-state h3 {
            margin-bottom: 15px;
            font-size: 1.5rem;
        }

        .priority {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 10px;
        }

        .priority-high {
            background: #ffebee;
            color: #c62828;
        }

        .priority-medium {
            background: #fff3e0;
            color: #ef6c00;
        }

        .priority-low {
            background: #e8f5e8;
            color: #2e7d32;
        }

        @media (max-width: 768px) {
            .form-group {
                flex-direction: column;
            }

            .todo-content {
                flex-direction: column;
            }

            .todo-actions {
                align-self: flex-end;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>üìù Todo List</h1>
            <p>Qu·∫£n l√Ω c√¥ng vi·ªác hi·ªáu qu·∫£</p>
        </div>

        <!-- Form th√™m todo m·ªõi -->
        <div class="add-form">
            <form action="/api/todos/create" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-input" placeholder="Ti√™u ƒë·ªÅ c√¥ng vi·ªác..." required>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-input" placeholder="M√¥ t·∫£ chi ti·∫øt..." rows="3"
                        style="resize: vertical;"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">‚ûï Th√™m c√¥ng vi·ªác</button>
                </div>
            </form>
        </div>

        <!-- Danh s√°ch todos -->
        <div class="todo-list">
            <% if (todos && todos.length> 0) { %>
                <% todos.forEach(function(todo) { %>
                    <div class="todo-item" id="todo-<%= todo.id %>">
                        <div class="todo-content">
                            <div class="todo-info">
                                <div class="todo-title">
                                    <%= todo.title %>

                                </div>
                                <% if (todo.description) { %>
                                    <div class="todo-description">
                                        <%= todo.description %>
                                    </div>
                                    <% } %>
                                        <div class="todo-meta">
                                            <% if (todo.created_at) { %>
                                                T·∫°o l√∫c: <%= new Date(todo.created_at).toLocaleString('vi-VN') %>
                                                    <% } %>
                                                        <% if (todo.updated_at && todo.updated_at !==todo.created_at) {
                                                            %>
                                                            | C·∫≠p nh·∫≠t: <%= new
                                                                Date(todo.updated_at).toLocaleString('vi-VN') %>
                                                                <% } %>
                                        </div>
                            </div>
                            <div class="todo-actions">
                                <button class="btn btn-edit" onclick="toggleEdit('<%= todo.id %>')">‚úèÔ∏è S·ª≠a</button>
                                <form action="/api/todos/<%= todo.id %>" method="POST" style="display: inline;"
                                    onsubmit="return confirmDelete()">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-delete">üóëÔ∏è X√≥a</button>
                                </form>
                            </div>
                        </div>

                        <!-- Form ch·ªânh s·ª≠a (·∫©n m·∫∑c ƒë·ªãnh) -->
                        <div class="edit-form" id="edit-form-<%= todo.id %>" style="display: none;">
                            <form action="/api/todos/<%= todo.id %>" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="form-group">
                                    <input type="text" name="title" class="form-input" value="<%= todo.title %>"
                                        required>
                                </div>
                                <div class="form-group">
                                    <textarea name="description" class="form-input"
                                        rows="3"><%= todo.description || '' %></textarea>
                                </div>
                                <div class="edit-actions">
                                    <button type="submit" class="btn btn-primary">üíæ L∆∞u</button>
                                    <button type="button" class="btn btn-cancel"
                                        onclick="toggleEdit('<%= todo.id %>')">‚ùå H·ªßy</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="empty-state">
                                <h3>üéØ Ch∆∞a c√≥ c√¥ng vi·ªác n√†o</h3>
                                <p>H√£y th√™m c√¥ng vi·ªác ƒë·∫ßu ti√™n c·ªßa b·∫°n!</p>
                            </div>
                            <% } %>
        </div>
    </div>

    <script>
        function toggleEdit(todoId) {
            const editForm = document.getElementById('edit-form-' + todoId);
            const isVisible = editForm.style.display !== 'none';

            // ·∫®n t·∫•t c·∫£ form edit kh√°c
            document.querySelectorAll('.edit-form').forEach(form => {
                form.style.display = 'none';
            });

            // Toggle form hi·ªán t·∫°i
            editForm.style.display = isVisible ? 'none' : 'block';

            // Focus v√†o input ƒë·∫ßu ti√™n khi m·ªü form
            if (!isVisible) {
                const firstInput = editForm.querySelector('input[type="text"]');
                if (firstInput) {
                    setTimeout(() => firstInput.focus(), 100);
                }
            }
        }

        function confirmDelete() {
            return confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a c√¥ng vi·ªác n√†y?');
        }

        // ƒê√≥ng form edit khi nh·∫•n Escape
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                document.querySelectorAll('.edit-form').forEach(form => {
                    form.style.display = 'none';
                });
            }
        });

        // Animation khi load trang
        document.addEventListener('DOMContentLoaded', function () {
            const todoItems = document.querySelectorAll('.todo-item');
            todoItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    item.style.transition = 'all 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
</body>

</html>